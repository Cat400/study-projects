#include <stdio.h>
#include <malloc.h>
#include <stdlib.h>

void swap(int *a, int *b){
    int c= *a;
    *a=*b;
    *b=c;
}

int func_compare(int a, int b, int r){
    int c;
    switch(r){
        case 1:
       c= (a > b) ? 1 : 0;
       return c;
       case 2:
       c= (a < b) ? 1 : 0;
       return c;
       case 3:
       c= (abs(a) > abs(b)) ? 1 : 0;
       return c;
       case 4:
       c= (abs(a) < abs(b)) ? 1 : 0;
       return c;
    }
}

void sort(int* mass, int size, int a){
    func_compare(mass[a], mass[a+1], a);
    int indicator_sum;
    while(1){ 
    for(int i=0; i+1 < size; i++) {
        indicator_sum+=func_compare(mass[i], mass[i+1],a);//если для каждой пары элементов массива выполнено условие сортировки
        if(func_compare(mass[i], mass[i+1], a))//compare каждый раз будет возвращать ноль и indicator_sum тоже будет равна нулю
            {
            swap(&mass[i], &mass[i+1]);
            }
        }
        if(indicator_sum==0){
            break;
        }
        else
        {
            indicator_sum=0;
        }
    } 
}


    

int main()
{ 
    int *arr;
    int size;
    int sort_way;
    printf("put a size of array");
    scanf("%d", &size);
    arr= (int*)malloc(size*sizeof(int));
    if (arr == NULL) {
        printf("no available memory");
    }
    printf("choose a way of sort");
    //("choise a way of sort the arr: 1 by highest value, 2 by lowest, 3 by absolute highest, 4 by absolute lowest  ");
    scanf("%d", &sort_way);
    for(int i=0; i < size; i++){
    printf("arr[%d]= ", i);
    scanf("%d", &arr[i]);
   }
    sort(arr, size, sort_way);
    func_compare(arr[0], arr[1], 1);
    for(int i=0; i < size; i++ ){
        printf("%d\n", arr[i]);
    }
    free(arr);
}
